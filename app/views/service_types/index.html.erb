<p id="notice"><%= notice %></p>

<h1>Service Types</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @service_types.each do |service_type| %>
      <tr>
        <td><%= service_type.name %></td>
        <td><%= link_to 'Show', service_type, class: 'btn btn-outline-primary' %></td>
        <td><%= link_to 'Edit', edit_service_type_path(service_type), class: 'btn btn-outline-primary' %></td>
        <td><%= link_to 'Destroy', service_type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Service Type', new_service_type_path, class: 'btn btn-outline-primary' %>
