<!DOCTYPE html>
<html>
  <head>
    <title>CourierService</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <ul>
      <li><a href="/search">Search Orders</a></li>
    <% if current_user.blank? %>
      <li><%= link_to 'Sign Up', new_user_registration_path %></li>
      <li><%= link_to 'Login', user_session_path %></li>
    <% else %>
      <li><a href="/">Home</a></li>
      <li><a href="/parcels">Parcels</a></li>
      <li><a href="/admin/users">Manage Users</a></li>
      <li><a href="/service_types">Service Types</a></li>
      <% if current_user.is_admin? %>
      <li><a href="/reports">Reports</a></li>
      <% end %>
      <li><%= button_to 'Logout', destroy_user_session_path, method: :delete,  class: "nav-link" %></li>
      <% end %>
    </ul>
    <%= yield %>
  </body>
</html>
