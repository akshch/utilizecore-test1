<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Address line one</th>
      <th>Address line two</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Pincode</th>
      <th>Mobile number</th>
      <th>User</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.address_line_one %></td>
        <td><%= address.address_line_two %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.country %></td>
        <td><%= address.pincode %></td>
        <td><%= address.mobile_number %></td>
        <td><%= address.user_id %></td>
        <td><%= link_to 'Show', address, class: 'btn btn-outline-primary' %></td>
        <td><%= link_to 'Edit', edit_address_path(address), class: 'btn btn-outline-primary' %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path, class: 'btn btn-outline-primary' %>
